<section class="form" >
  <div class="container " style = "text-align:center ; " >   <h2 class = "perhead2">Update</h2></div>

      <div class="row" style = "width:99.7vw; display: flex; align-items: center; justify-content: center;" >      
         <!-- Title-->

        <div class="col-lg-6 bg-light pt-4">
          <form action="/update/<%= blog.id %>" method="post">
          
            <div class="row">
              <div class="mb-3 col-md-6">
                <label for="title" class="form-label">Title: </label>
                <input
                  id="title"
                  name="title"
                  class="form-control"
                  type="text"
                  placeholder="Enter your title"
                  value = "<%= blog.title %>"
                />
              </div>

            <!-- author -->
              <div class="mb-3 col-md-6 ">
                <label for="author" class="form-label">Author:</label>
                <input id="author" name="author" class="form-control" type="text"
                placeholder="Enter author name" 
                value = "<%= blog.author %>"/>
               
              </div>
            </div>
            <!-- description -->
         <div class="mb-3 col-md-12">
           <p>  Description:</p>

           <textarea name="discription" id="discription" cols="50" rows="2" placeholder="Enter description"  
           ><%= blog.discription %></textarea>
          </div>


<!-- created date -->
      <div class="mb-3 col-md-12">
        <label for="date" class="form-label">Created Date:</label>
        <input
          id="date"
          name="date"
          class="form-control"
          type="date"
          value = "<%= blog.date %>" />
      </div>

      <!-- catagory -->
      <div class="mb-3 col-md-6"style="margin-top:30px;">
        <label for="category" class="form-label">Category : </label>
        <select id="category" name="category">
            <option value=" <%= blog.category %>"> <%= blog.category %></option>
            <option value="food">Food</option>
            <option value="technology">Technology</option>
            <option value="photography">Photography</option>
            <option value="future">Future</option>
            <option value="fashion">Fashion</option>
            <option value="lifestyle">lifestyle</option>
            <option value="education">Education</option>
            <option value="arts">Arts</option>
            <option value="movies">Movies</option>
            <option value="Other">Other</option>
        
          </select>
      </div>

    <!-- image -->
    <div class="mb-3 col-md-12">
      <label for="image" class="form-label">Image:</label>
      <input
        id="image"
        name="image"
        class="form-control"
        type="url"
        placeholder="Enter image url"
        value = "<%= blog.image%>"
      />
    </div>

    <!-- update -->
            <div class="form-check mb-3" >
      
            <div class="">
              <button class="btn btn-success" style = "display: block; margin: auto; width:200px">Update</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
<!-- </div> -->
<!-- footer -->
</section>

<%- include("./partials/footer") %>   